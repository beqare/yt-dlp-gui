{
  "name": "yt-dlp-gui",
  "version": "1.0.0",
  "description": "Modern yt-dlp GUI with advanced features",
  "author": "Jonas Grimm",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.ytdlp.gui",
    "productName": "yt-dlp GUI",
    "copyright": "Copyright Â© 2026 ${author}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!src/**/*",
      "!*.md",
      "!.gitignore",
      "!.editorconfig",
      "!package-lock.json",
      "!yarn.lock"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publisherName": "Jonas Grimm"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "yt-dlp GUI",
      "uninstallDisplayName": "yt-dlp GUI",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
